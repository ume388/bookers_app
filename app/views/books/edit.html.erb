<main>
<h1>Editing Book</h1>
<%= form_for(@book) do |b| %>

<!--エラーメッセージ表示部分-->
<% if @book.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
