<h1>Books</h1>
<!--投稿された本情報のリスト化-->
<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thred>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book), class: "show_#{book.id}" %>
        <%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %>
        <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{book.id}" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<!--新規投稿フォーム-->
<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>

